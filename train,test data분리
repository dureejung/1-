test_sales_data <- sales_data %>%
  filter(기준_년_코드 == 2020, 기준_분기_코드 ==3)

data1<- sales_data %>%
  filter(기준_년_코드 == 2019)

data2<-sales_data %>%
  filter(기준_년_코드 == 2020, 기준_분기_코드 <= 2)

train_sales_data <- rbind(data1, data2)

write.csv(train_sales_data, "추정매출_train.csv")
write.csv(test_sales_data, "추정매출_test.csv")
